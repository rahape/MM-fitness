  <body class="bg-light">
        <nav class="navbar navbar-expand-lg navbar-light bg-white ">
            <a class="navbar-brand ml-3" href="/admin/dashboard">Admin Dashboard</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a id="home" class="nav-link" href="/admin/dashboard"><i class="fa fa-home" aria-hidden="true"></i> Hjem</a>
                </li>
                <li class="nav-item">
                    <a id="news" class="nav-link" href="/admin/news"><i class="fa fa-newspaper-o" aria-hidden="true"></i> Administrér nyheder</a>
                </li>
                <li class="nav-item">
                    <a id="workouts" class="nav-link" href="/admin/workouts"><i class="fa fa-list-ol" aria-hidden="true"></i> Administrér øvelser</a>
